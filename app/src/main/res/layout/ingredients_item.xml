<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingredients"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shaped_rectangle"
    android:backgroundTint="@color/black"
    android:layout_margin="1dp"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="@dimen/base_text_size"
        android:layout_margin="@dimen/base_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="1. " />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/white"
        android:textSize="@dimen/base_text_size"
        app:layout_constraintEnd_toStartOf="@id/ingredientValue"
        app:layout_constraintStart_toEndOf="@id/number"
        app:layout_constraintTop_toTopOf="@id/number"
        tools:text="ingredient" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ingredientValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_margin"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/base_text_size"
        app:layout_constraintBottom_toBottomOf="@id/ingredient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ingredient"
        tools:text="value" />


</androidx.constraintlayout.widget.ConstraintLayout>